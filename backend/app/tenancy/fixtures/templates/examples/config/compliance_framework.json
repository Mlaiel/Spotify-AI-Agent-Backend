      "gdpr": {
        "name": "General Data Protection Regulation",
        "version": "2018",
        "jurisdiction": "EU",
        "mandatory": true,
        "implementation_level": "comprehensive",
        
        "requirements": {
          "data_protection": {
            "encryption_at_rest": {
              "required": true,
              "algorithm": "AES-256-GCM",
              "key_rotation_days": 90,
              "validation": "automatic"
            },
            "encryption_in_transit": {
              "required": true,
              "protocol": "TLS 1.3",
              "cipher_suites": ["TLS_AES_256_GCM_SHA384"],
              "validation": "continuous"
            },
            "data_minimization": {
              "required": true,
              "retention_policy": "automatic",
              "anonymization": "configurable",
              "pseudonymization": true
            }
          },
          
          "consent_management": {
            "explicit_consent": true,
            "granular_consent": true,
            "consent_withdrawal": true,
            "consent_logging": true,
            "consent_validation": "real-time"
          },
          
          "subject_rights": {
            "right_to_access": {
              "automated": true,
              "response_time_hours": 24,
              "data_portability": true
            },
            "right_to_rectification": {
              "automated": true,
              "verification_required": true,
              "audit_trail": true
            },
            "right_to_erasure": {
              "automated": true,
              "cascading_deletion": true,
              "backup_handling": "automatic",
              "verification": "cryptographic"
            },
            "right_to_portability": {
              "formats": ["JSON", "XML", "CSV"],
              "encryption": true,
              "verification": true
            }
          },
          
          "breach_notification": {
            "detection_time_minutes": 15,
            "assessment_time_hours": 2,
            "authority_notification_hours": 72,
            "subject_notification_hours": 72,
            "automated_reporting": true
          }
        },
        
        "monitoring": {
          "compliance_score_threshold": 95,
          "audit_frequency_days": 30,
          "automated_checks": true,
          "real_time_monitoring": true
        }
      },
      
